{
  "collections": [
    {
      "name": "core",
      "path": "~/odin-lang/core"
    },
    {
      "name": "shared",
      "path": "./src"
    }
  ],
  "thread_pool_count": 2,
  "enable_document_symbols": true,
  "enable_semantic_tokens": false,
  "enable_hover": true,
  "enable_global_std": true,
  "verbose": true,
  "enable_format": true,
  "enable_snippets": true,
  "formatter": {
    "tabs": true,
    "characters": 90
  }
}
